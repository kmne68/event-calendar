@{
    ViewBag.Title = "Calendar";
}

<div class="container">

    <h2>Calendar</h2>

    @section scripts {
        <script>
            $(document).ready(function () {
                $('#calendar').fullCalendar({
                    theme: true,
                    header: {
                        left: 'prev, next, today',
                        center: 'title',
                        right: 'month, agendaWeek, agendaDay'
                    },
                    defaultView: 'month',
                    editable: false,
                    backgroundColor: 'red',
                    nowIndicator: true,
                    events: "/Event/GetEvents/"
                });
            });
        </script>
    }



    <div class="row">
        <div class="col-md-12">
            <div id="calendar"></div>
        </div>
    </div>

</div>